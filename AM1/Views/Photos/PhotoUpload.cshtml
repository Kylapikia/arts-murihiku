@{
    ViewData["Title"] = "PhotoUpload";
}



<h2 style="text-align:center;">Photos Upload</h2>
<hr />
<br /><br />
<div class="container">
    <div class="col-md-4 col-md-offset-5">
        <form action="PhotoUpload" enctype="multipart/form-data" method="post">
            <div class="form-group" hidden>
                AlbumID:<br>
                <input type="text" name="albumID" value="@ViewBag.albumID">
            </div>

            <div class="form-group">
                Files:<br>
                <input type="file" name="files" accept="image/*" multiple>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
        <hr />
        <h3>@ViewBag.Uploaded</h3>
    </div>
</div>




