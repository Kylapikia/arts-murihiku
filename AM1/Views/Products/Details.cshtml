@model AM1.Models.Product

@{
    ViewData["Title"] = "Details";
}
<a asp-action="Index"><input type="button" name="BackToShop" value="Back to Shop" class="ShopButton pull-right" /></a>
<div class="col-md-12">
    <h2>@Html.DisplayFor(model => model.Name) </h2>
    <hr />
</div>
<div class="col-md-6">
    <img src="@Html.DisplayFor(model => model.ProductPicture)" class="w3-border w3-padding-small" style="width:90%;">
</div>
<div class="col-md-6">

    <ul class="DetailList" style="font-size: 22px;list-style-type: none;">
        <li></li>
        <li>
            @Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(model => model.Price)<hr />
        </li>
        <li>
            @Html.DisplayNameFor(model => model.Category): @Html.DisplayFor(model => model.Category)<hr />
        </li>
        <li>
            @if (Model.Quantity > 0)
            {
                <p style="color:lightgreen;">In Stock</p>
            }
            else
            {
                <p style="color:red;">Out of Stock</p>
            }
            <hr />
        </li>
        <li>
            <a asp-area="" asp-controller="Carts" asp-action="Create" asp-route-id="@Model.ProductID"><input type="button" name="Add" value="Add to cart" class="AddCartBtn" /></a>
            <a asp-action="Edit" asp-route-id="@Model.ProductID"><input type="button" name="Edit" value="Edit" class="AddCartBtn" /></a>

        </li>
    </ul>
</div>
<div class="col-md-12">

</div>
<div class="row"></div>

